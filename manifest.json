{
  "name": "FaceTweet",
  "description": "Share the content on twitter ",
  "version": "2.0",
  "icons" : {
	"16" : "ft16.png",
	"64" : "ft64.png",
	"128" : "ft128.png"
  },
  "permissions": [
    "activeTab","https://*/*","http://*/*"
  ],
	"content_scripts":[
			{
				"matches": ["http://*.facebook.com/*","https://*.facebook.com/*"],
				"js": ["file.js"]
			}
		],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon" : "ft16.png",
    "default_title": "FaceTweet"
  },
  
  "manifest_version": 2
}
